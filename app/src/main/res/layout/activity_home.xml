<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/imgView_logo"
        android:layout_width="307dp"
        android:layout_height="102dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
        tools:ignore="MissingConstraints" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="223dp"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_envelope"
        android:drawablePadding="30dp"
        android:hint="E-mail"
        android:fontFamily="@font/chivo_light"
        android:textColorHint="@color/white"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:drawableLeft="@drawable/ic_envelope" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="286dp"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_padlock"
        android:drawablePadding="20dp"
        android:hint="Lozinka"
        android:fontFamily="@font/chivo_light"
        android:textColorHint="@color/white"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:drawableLeft="@drawable/ic_padlock"
        android:autofillHints="" />

    <Button
        android:id="@+id/button_prijava"
        android:layout_width="286dp"
        android:layout_height="55dp"
        android:text="@string/prijavi_se"
        android:fontFamily="@font/chivo_light"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        />
    <Button
        android:id="@+id/button_regInstruktor"
        android:layout_width="286dp"
        android:layout_height="55dp"
        android:text="Registriraj se kao instruktor"
        android:fontFamily="@font/chivo_light"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:background="@drawable/custom_button"
        android:layout_marginTop="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        />

</androidx.constraintlayout.widget.ConstraintLayout>